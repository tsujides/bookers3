<% if book.favorited_by?(current_user) %>
  <%= link_to book_favorites_path(book), class: book.favorites.count > 0 ? "text-danger":"text-info", method: :delete, remote: true do %>
    ♥<%= book.favorites.count %>
  <% end %>
<% else %>
  <%= link_to book_favorites_path(book), class: book.favorites.count > 0 ? "text-danger":"text-info", method: :post, remote: true do %>
    ♥<%= book.favorites.count %>
  <% end %>
<% end %>