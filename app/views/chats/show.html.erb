<%= javascript_pack_tag 'chats' %>

<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-12">
      <h2><%= @user.name %>さんとのチャット</h2>
    </div>
  </div>
  <div class="row">
    <div id="chat-message-list-holder" class="col">
      <%= render 'show', chats: @chats %>
    </div>
  </div>
  <div class="row">
    <div class="col chat-message-form-holder">
      <%= form_with url: chat_create_path, model: [@chat], id: "chat-message-form", local: false do |f| %>
      <%= f.text_field :message %>
      <%= f.submit "送信", class: "btn btn-success" %>
      <% end %>
    </div>
  </div>
  <div class="row">
    <div class="col">
      <div id="chat-message-error"></div>
    </div>
  </div>
</div>
